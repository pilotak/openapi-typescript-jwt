{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/__tests__"]
}
